import java.io.BufferedReader;
import java.io.InputStreamReader;

public class JavaFinal3 {

	public static void main(String[] args) throws Exception {

		InputStreamReader isr = new InputStreamReader(System.in);
		BufferedReader br = new BufferedReader(isr);

		System.out.println("計算の種類を選択してください。");
		System.out.println("------------------------------");
		System.out.println("1.四角の面積(縦×横)");
		System.out.println("2.立方体の面積(一辺×一辺×一辺)");
		System.out.println("3.直方体の面積(縦×横×高さ)");
		System.out.println("------------------------------");
		System.out.print("計算種類(1-3):");

		int num = Integer.parseInt(br.readLine()); //キー入力しint型に変換

		//キー入力終了
		br.close();
		isr.close();




	//四角の面積の計算
	public static int calcShape(int len, int side) {
		System.out.println("四角の面積(縦×横)の各辺の長さを入力してください。");
		System.out.print("縦の長さ:");
		System.out.print("横の長さ:");
		return side;
	}

	//立方体の体積の計算
	public static int calcShape(int side) {
		System.out.println("立方体の体積(一辺×一辺×一辺)の辺の長さを入力してください。");
		System.out.print("一辺の長さ:");
	}

	//直方体の体積の計算
	public static int calcShape(int len, int side, int high) {
		System.out.println("直方体の体積(縦×横×高さ)の各辺の長さを入力してください。");
		System.out.print("1番目の辺の長さ:");
		System.out.print("2番目の辺の長さ:");
		System.out.print("3番目の辺の長さ:");
	}

}
